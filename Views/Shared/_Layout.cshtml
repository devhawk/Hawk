@using Microsoft.AspNet.Mvc.Rendering
@using System.Text;

@functions
{
    HtmlString SocialLink(string url, string iconIdentifier)
    {
        var tw = new StringCollectionTextWriter(Encoding.UTF8);
        tw.WriteLine("\n<li>");
        tw.Write("  <a href=\""); tw.Write(url); tw.WriteLine("\">");
        tw.WriteLine("    <span class=\"fa-stack fa-lg\">");
        tw.WriteLine("      <i class=\"fa fa-circle fa-stack-2x text-info\"></i>");
        tw.Write("      <i class=\"fa "); tw.Write(iconIdentifier); tw.WriteLine(" fa-stack-1x fa-inverse\"></i>");
        tw.WriteLine("    </span>");
        tw.WriteLine("  </a>");
        tw.Write("</li>");
        
        return new HtmlString(tw);
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>DevHawk @ViewBag.Title</title>

    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.css" rel="stylesheet">
    <!--<link href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.2/cyborg/bootstrap.css" rel="stylesheet">-->
