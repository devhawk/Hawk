                <a asp-action="Index" asp-controller="Home" class="navbar-brand">DevHawk</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-action="About" asp-controller="Home">About</a></li>
                    <li><a asp-action="Archive" asp-controller="Home">Archive</a></li>
                    <li><a asp-action="Index" asp-controller="Feed">RSS</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container" role="main">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    @RenderBody()
                </div>
                <div class="col-md-3" style="margin-left:10px">
                    <h3 class="widget-title">My Sponsors</h3>
                    <img src="http://lorempixel.com/240/400/technics/" />

