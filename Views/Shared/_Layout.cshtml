    <link href="https://rawgit.com/isagalaev/highlight.js/master/src/styles/default.css" rel="stylesheet">

    <style>
        pre code {
            display: block;
            overflow-x: auto;
            padding: 0.5em;
            background: #f0f0f0;
            -webkit-text-size-adjust: none;
            -moz-text-size-adjust: none;
            -ms-text-size-adjust: none;
            text-size-adjust: none;
        }
        
        .image-right { float:right; }
        .image-left  { float:left;  }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse">
        <div class="container">
