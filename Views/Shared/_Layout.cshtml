                        @SocialLink("http://twitter.com/devhawk", "fa-twitter")
                        @SocialLink("http://facebook.com/devhawk", "fa-facebook")
                        @SocialLink("https://github.com/devhawk/", "fa-github")
                        @SocialLink("https://www.linkedin.com/in/harrypierson", "fa-linkedin")
                    </ul>
                    <p class="copyright text-muted text-center">Copyright &copy; Harry Pierson @DateTime.Now.Year</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="http://code.jquery.com/jquery-1.11.2.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
</body>
</html>
